<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sss.projectx">

    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.BATTERY_STATS" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <service
            android:name=".Others.MyService"
            android:label="@string/serviceQ"/>

        <activity
            android:name=".SettingsActivity"
            android:label="@string/action_settings" />
        <activity
            android:name=".PinLockActivity"
            android:label="@string/action_pin" />
        <activity
            android:name=".ActivateActivity"
            android:label="@string/action_activate" />
        <activity
            android:name=".GeneralActivity"
            android:label="@string/action_gen" />
        <activity
            android:name=".SensorsActivity"
            android:label="@string/action_sensors" />
        <activity
            android:name=".ActionActivity"
            android:label="@string/action_actions" />
        <activity
            android:name=".AboutActivity"
            android:label="@string/action_aboutus" />
    </application>

</manifest>